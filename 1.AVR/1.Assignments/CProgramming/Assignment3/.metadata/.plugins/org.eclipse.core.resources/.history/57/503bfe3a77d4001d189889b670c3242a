#include <stdio.h>

void lengthCalculator(char str[],char ch);

int main(){

	char arr[20];
	printf("Welcome to Exercise 12 Program, Please enter a text: ");
	fflush(stdout);
	//scanf("%c",arr);
	gets(arr);

	lengthCalculator(arr,ch);

	return 0;
}
void lengthCalculator(char str[],char ch){
	int count = 0;
	int i = 0;
	while(str[i] != '\0'){
		count++;
		i++;
	}
	printf("The length of string %s is %d",str,count);
}
