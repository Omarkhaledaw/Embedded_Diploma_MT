#include <stdio.h>


int main(){

	int arr[10], i;
	int result;

	printf("Enter elements in the array: ");
	for(i=0; i<10; i++)
	{
		scanf("%d", &arr[i]);
	}

	result = findSecondLargest(arr,10);

	printf("Second largest = %d", result);


	return 0;
}
int findSecondLargest(int arr[],size){
	int i = 0;
	int max = arr[i];
	int max2;

	for(int i = 0;i<size;i++){
		if(max < arr[i]){
			max = arr[i];
		}
	}
	for(int i = 0;i<size;i++){
		if(max > arr[i] && arr[i] > max2 ){
			max2 = arr[i];
		}
		i++;
	}
	return max2;
}
