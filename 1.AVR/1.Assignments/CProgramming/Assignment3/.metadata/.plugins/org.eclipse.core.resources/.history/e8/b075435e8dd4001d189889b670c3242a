#include <stdio.h>
#include<string.h>

void concatManual(char str1[],char str2[]);


int main(){

	char arr1[200];
	char arr2[20];
	printf("Welcome to Exercise 15 Program, Please enter a text: ");
	fflush(stdout);
	gets(arr1);
	printf("Great, Please enter another text: ");
	fflush(stdout);
	gets(arr2);

	concatManual(arr1,arr2);
	printf("%s",arr1);

	return 0;
}
void concatManual(char str1[],char str2[]){
	int i=0,j=0;
	while(str1[i] != '\0'){
		i++;
	}
	i++;
	while(str2[j] != '\0'){
		str1[i] = str2[j];
		j++;
		i++;
	}
	i++;
	str1[i] = '\0';
}
