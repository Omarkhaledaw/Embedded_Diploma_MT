#include <stdio.h>

void bitwiseSwap(int*,int*);

int main(){
	int num1,num2;
	void(*ptr_func)(int*,int*);
	printf("Welcome to Exercise 7 program, please enter a number: ");
	fflush(stdout);
	scanf("%d",&num1);
	printf("Great, now enter another number: ");
	fflush(stdout);
	scanf("%d",&num2);

	printf("Before swapping\nNum 1 = %d\nNum 2 = ",num1,num2);
	ptr_func = bitwiseSwap;
	ptr_func(&num1,&num2);

	printf("After swapping\nNum 1 = %d\nNum 2 = ",num1,num2);

	return 0;
}
void bitwiseSwap(int* ptr1,int* ptr2){
	*ptr1 = *ptr1 ^ *ptr2;
	*ptr2 = *ptr1 ^ *ptr2;
	*ptr1 = *ptr1 ^ *ptr2;
}
